<Application x:Class="WallpaperForBA.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WallpaperForBA"
             
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <ResourceDictionary>
            <FontFamily x:Key="default_font">/Assets/#方正兰亭圆简体_中</FontFamily>
            
            

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Shared.xaml"/>
                <ResourceDictionary>
                    
                    <Style TargetType="SkewedBorder" BasedOn="{StaticResource sb_base_style}"/>
                </ResourceDictionary>

            </ResourceDictionary.MergedDictionaries>



        </ResourceDictionary>
    </Application.Resources>
</Application>
